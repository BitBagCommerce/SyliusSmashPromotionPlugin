{% if data.image %}
    <img src="{{ data.image.path|imagine_filter(filter|default('sylius_admin_product_thumbnail')) }}" class="ui bordered image smash-image" data-smash-id="{{ data.id }}"/>

    <div class="ui modal smash-promotion" id="smash-modal-{{ data.id }}">
        <div class="content">
            <img class="ui fluid image" src="{{ data.image.path|imagine_filter(filter|default('sylius_shop_product_original')) }}">
        </div>
    </div>
{% else %}
    <img src="http://via.placeholder.com/50x50" class="ui bordered image"/>
{% endif %}
